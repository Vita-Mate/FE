<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/select_chall_image"
    android:background="@drawable/bordering_gray"
    tools:context=".Challenge.ChallengeImageViewFragment"
    android:elevation="15dp"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <!-- 카메라 선택 버튼과 텍스트 -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonCameraLayout"
            android:layout_gravity="center_vertical">

                <ImageButton
                    android:id="@+id/buttonCamera"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:background="@color/transparent"
                    android:scaleType="fitCenter"
                    android:src="@drawable/camera" />

                <TextView
                    android:id="@+id/textCamera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="사진찍기"
                    android:textAlignment="center"
                    android:textSize="20sp"
                    android:layout_gravity="bottom"/>
        </FrameLayout>


        <!-- 갤러리 선택 버튼과 텍스트 -->

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/buttonGalleryLayout"
            android:layout_gravity="center">

            <ImageButton
                android:id="@+id/buttonGallery"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@color/transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/gallery" />

            <TextView
                android:id="@+id/textGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사진선택"
                android:textSize="20sp"
                android:layout_gravity="bottom"/>
        </FrameLayout>
    </LinearLayout>
</FrameLayout>

