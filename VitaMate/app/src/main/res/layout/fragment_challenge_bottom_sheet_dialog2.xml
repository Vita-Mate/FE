<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Challenge.ChallengeActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가된 기록"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="120dp"
                android:layout_margin="20dp"
                android:id="@+id/challenge_image"
                android:background="@drawable/bordering_gray"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray"
                android:layout_margin="20dp"/>
            
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 사진"
                android:textSize="20dp"
                android:layout_marginLeft="20dp"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:rowCount="3"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/challenge_image1"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="30dp"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bordering_gray" />

                <ImageView
                    android:id="@+id/challenge_image2"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="30dp"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_alignParentStart="true"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bordering_gray" />
                <ImageView
                    android:id="@+id/challenge_image3"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="30dp"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bordering_gray" />
                <ImageView
                    android:id="@+id/challenge_image4"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="30dp"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bordering_gray" />
                <ImageView
                    android:id="@+id/challenge_image5"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="30dp"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bordering_gray" />
                <ImageView
                    android:id="@+id/challenge_image6"
                    android:layout_width="150dp"
                    android:layout_height="120dp"
                    android:layout_margin="30dp"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginEnd="20dp"
                    android:background="@drawable/bordering_gray" />

            </GridLayout>

            <android.widget.Button
                android:id="@+id/picture_record_close_button"
                android:background="@drawable/button_background"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="닫기"
                android:textSize="20dp"
                android:layout_gravity="center"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"/>


        </LinearLayout>
    </ScrollView>
</FrameLayout>