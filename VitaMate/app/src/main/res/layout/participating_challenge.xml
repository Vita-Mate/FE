<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@drawable/home_border_babypink"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:elevation="15dp"
        android:id="@+id/item_challenge">

        <TextView
            android:id="@+id/challenge_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:text="Title Text"
            android:textSize="30dp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="주"
            android:textSize="15dp"
            android:layout_marginTop="5dp"
            app:layout_constraintBottom_toBottomOf="@id/challenge_title"
            app:layout_constraintTop_toTopOf="@id/challenge_title" />

            <TextView
                android:id="@+id/challenge_frequency"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="2"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="@id/challenge_title"
                app:layout_constraintTop_toTopOf="@id/challenge_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="회"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="@id/challenge_title"
                app:layout_constraintTop_toTopOf="@id/challenge_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="참여 현황"
                android:textSize="15dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="@id/challenge_title"
                app:layout_constraintTop_toTopOf="@id/challenge_title" />

            <TextView
                android:id="@+id/challenge_ennum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="@id/challenge_title"
                app:layout_constraintTop_toTopOf="@id/challenge_title" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="/"
                android:textSize="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="@id/challenge_title"
                app:layout_constraintTop_toTopOf="@id/challenge_title" />

            <TextView
                android:id="@+id/challenge_maxnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="5"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="5dp"
                app:layout_constraintBottom_toBottomOf="@id/challenge_title"
                app:layout_constraintTop_toTopOf="@id/challenge_title" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="D-day: " />

            <TextView
                android:id="@+id/challenge_dDay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="4"
                android:textStyle="bold"/>

        </LinearLayout>


        <android.widget.Button
            android:id="@+id/challenge_DeleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="20dp"
            android:background="@drawable/button_background"
            android:backgroundTint="@color/white"
            android:text="취소하기"
            android:textSize="15dp" />

    </LinearLayout>

</RelativeLayout>
