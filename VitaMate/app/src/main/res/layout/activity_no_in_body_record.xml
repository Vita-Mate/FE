<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".registerPage.RegisterActivity">


    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="50dp"
      android:gravity="center"
      android:padding="10sp"
      android:text="키를 입력해 주세요."
      android:textSize="22sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="30dp"
      android:orientation="horizontal"
      android:textColor="#000000"
      android:textSize="22sp">

      <EditText
        android:id="@+id/heightEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/cmLabel"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:layout_toLeftOf="@id/cmLabel"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="22sp" />

      <TextView
        android:id="@+id/cmLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:text="cm"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="30dp"
      android:padding="10sp"
      android:text="몸무게를  입력해 주세요."
      android:textSize="22sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="50dp"
      android:layout_marginTop="30dp"
      android:orientation="horizontal"
      android:textColor="#000000"
      android:textSize="22sp">

      <EditText
        android:id="@+id/weightEditText"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/kgLabel"
        android:layout_alignParentStart="true"
        android:layout_marginEnd="4dp"
        android:layout_toLeftOf="@id/kgLabel"
        android:inputType="number"
        android:padding="10dp"
        android:textSize="22sp" />

      <TextView
        android:id="@+id/kgLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:padding="10dp"
        android:text="kg"
        android:textSize="20sp"
        android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="290dp"
      android:orientation="horizontal"
      android:textColor="#000000"
      android:textSize="15sp">

      <android.widget.Button
        android:id="@+id/previousBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:background="@drawable/solid_button"
        android:gravity="center"
        android:textSize="16dp"
        android:padding="1dp"
        android:text="이전"
        android:textColor="#000000" />

      <android.widget.Button
        android:id="@+id/nextBtn"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:background="@drawable/solid_button"
        android:enabled="false"
        android:gravity="center"
        android:textSize="16dp"
        android:padding="1dp"
        android:text="다음"
        android:textColor="#000000" />
    </LinearLayout>
  </LinearLayout>
</layout>