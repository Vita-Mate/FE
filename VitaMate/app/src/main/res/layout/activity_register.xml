<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">

  <LinearLayout
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="708dp"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".registerPage.RegisterActivity">

    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:layout_marginBottom="10dp"
      android:gravity="center"
      android:padding="10sp"
      android:text="닉네임을 설정해 주세요."
      android:textSize="22sp"
      android:textStyle="bold" />

    <!--닉네임 길이제한 10자, 특수문자 사용 불가-->
    <EditText
      android:id="@+id/nicknameEditText"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:layout_marginBottom="8dp"
      android:gravity="center"
      android:hint="이후 변경할 수 없습니다."
      android:inputType="text"
      android:maxLength="10"
      android:padding="10dp"
      android:textSize="15sp" />


    <Button
      android:id="@+id/checkDuplicateBtn"
      android:layout_width="300dp"
      android:layout_height="45dp"
      android:layout_marginBottom="10dp"
      android:background="@drawable/solid_button"
      android:enabled="false"
      android:gravity="center"
      android:padding="1dp"
      android:text="중복 확인"
      android:textColor="#000000"
      android:textSize="15sp" />


    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="10dp"
      android:padding="10sp"
      android:text="나이를 입력해주세요."
      android:textSize="22sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="10dp"
      android:gravity="center"
      android:orientation="horizontal">

      <!-- 연도 입력 -->
      <EditText
        android:id="@+id/yearEditText"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:hint="YYYY"
        android:inputType="number"
        android:maxLength="4"
        android:padding="10dp" />

      <!-- 월 입력 -->
      <EditText
        android:id="@+id/monthEditText"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:gravity="center"
        android:hint="MM"
        android:inputType="number"
        android:maxLength="2"
        android:padding="10dp" />

      <!-- 일 입력 -->
      <EditText
        android:id="@+id/dayEditText"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="DD"
        android:inputType="number"
        android:maxLength="2"
        android:padding="10dp" />

    </LinearLayout>


    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginBottom="10dp"
      android:padding="10sp"
      android:text="성별을 선택해 주세요."
      android:textSize="22sp"
      android:textStyle="bold" />

    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginBottom="20dp"
      android:orientation="horizontal">

      <ImageButton
        android:id="@+id/maleButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:background="@color/white"
        android:contentDescription="male"
        android:scaleType="fitCenter"
        android:src="@drawable/male" />

      <ImageButton
        android:id="@+id/femaleButton"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/white"
        android:contentDescription="female"
        android:scaleType="fitCenter"
        android:src="@drawable/female" />
    </LinearLayout>

    <Button
      android:id="@+id/nextBtn"
      android:layout_width="150dp"
      android:layout_height="45dp"
      android:layout_marginLeft="70dp"
      android:layout_marginTop="25dp"
      android:background="@drawable/solid_button"
      android:enabled="false"
      android:padding="1dp"
      android:text="다음"
      android:textColor="#000000"
      android:textSize="15sp" />
  </LinearLayout>
</layout>