<?xml version="1.0" encoding="utf-8"?>
<layout>
  <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_gravity="start"
      android:layout_marginTop="50dp"
      android:layout_marginLeft="20dp"
      android:gravity="center"
      android:padding="10sp"
      android:text="닉네임을 설정해 주세요."
      android:textSize="22sp"
      android:textStyle="bold" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:hint="프로필에 표시되는 이름으로 이후에는 변경할 수 없습니다."
        android:textSize="15sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="29dp"
        tools:layout_editor_absoluteY="122dp" />


    <Button
      android:id="@+id/checkDuplicateBtn"
      android:layout_width="290dp"
      android:layout_height="45dp"
      android:background="@drawable/solid_button"
      android:gravity="center"
      android:padding="1dp"
      android:text="중복 확인"
      android:textColor="#000000"
      android:textSize="15sp"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="60dp" />


    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10sp"
      android:text="생년원일을 입력해 주세요."
      android:textSize="22sp"
      android:textStyle="bold"
      android:layout_marginTop="17dp"
      android:layout_marginLeft="20dp"
       />

    <DatePicker
      android:id="@+id/vDatePicker"
      android:layout_width="300dp"
      android:layout_height="wrap_content"
      android:calendarViewShown="false"
      android:datePickerMode="spinner"
      android:layout_marginTop="5dp"
      android:layout_marginLeft="20dp"/>



    <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:padding="10sp"
      android:text="성별을 선택해 주세요."
      android:textSize="22sp"
      android:textStyle="bold"
      android:layout_marginTop="10dp"
      android:layout_marginLeft="20dp" />


    <LinearLayout
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginLeft="120dp">

      <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/male"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:layout_marginTop="20dp"
        android:contentDescription="male"/>

      <ImageButton
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/female"
        android:scaleType="fitCenter"
        android:background="@color/white"
        android:layout_marginTop="21dp"
        android:layout_marginLeft="80dp"
        android:contentDescription="female"/>


    </LinearLayout>

    <Button
      android:id="@+id/nextBtn"
      android:layout_width="140dp"
      android:layout_height="45dp"
      android:background="@drawable/solid_button"
      android:gravity="center"
      android:padding="1dp"
      android:text="다음"
      android:textColor="#000000"
      android:textSize="15sp"
      android:layout_marginTop="40dp"
      android:layout_marginLeft="230dp" />
  </LinearLayout>
</layout>