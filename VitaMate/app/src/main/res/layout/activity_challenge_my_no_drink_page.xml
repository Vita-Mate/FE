<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <!-- Toolbar with title and back button -->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/gray">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageButton
                        android:id="@+id/pre_button1"
                        android:layout_width="33dp"
                        android:layout_height="33dp"
                        android:background="@android:color/transparent"
                        android:clickable="true"
                        android:focusable="true"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pre_btn"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.5" />

                    <TextView
                        android:id="@+id/toolbar_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MY"
                        android:textAlignment="center"
                        android:gravity="center"
                        android:textColor="@color/black"
                        android:textSize="25dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.appcompat.widget.Toolbar>

            <!-- Material Calendar View -->
            <com.prolificinteractive.materialcalendarview.MaterialCalendarView
                android:background="@drawable/border"
                android:backgroundTint="@color/baby_pink"
                android:id="@+id/CalendarRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="24dp"
                android:theme="@style/CalendarViewCustom"
                app:mcv_showOtherDates="all"
                app:mcv_firstDayOfWeek="sunday"
                app:layout_constraintTop_toBottomOf="@id/toolbar"/>

            <!-- ToggleButton to switch between week and month view -->
            <ToggleButton
                android:id="@+id/toggleViewButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textOn="Month View"
                android:textOff="Week View"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/CalendarRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Day text -->
            <TextView
                android:id="@+id/day_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D+day가 들어갈 예정"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/toggleViewButton"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Record title -->
            <TextView
                android:id="@+id/record_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="오늘의 금주 기록"
                android:layout_margin="20dp"
                app:layout_constraintTop_toBottomOf="@id/day_text"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- O/X 버튼 레이아웃 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/record_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <android.widget.Button
                    android:id="@+id/button_o"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="O"
                    android:textColor="@android:color/holo_blue_light"
                    android:textSize="36sp"
                    android:background="@drawable/bordering_gray"
                    android:layout_marginEnd="16dp" />

                <android.widget.Button
                    android:id="@+id/button_x"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="X"
                    android:textColor="@android:color/holo_red_light"
                    android:textSize="36sp"
                    android:background="@drawable/bordering_gray"/>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>
