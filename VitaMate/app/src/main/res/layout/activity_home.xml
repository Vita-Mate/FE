<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto">
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      tools:context=".HomeActivity"
      android:fillViewport="true"
      android:background="@color/white">

        <LinearLayout
          android:id="@+id/main"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="vertical">

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical"
              android:background="@color/black">
                <TextView
                  android:id="@+id/today"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_below="@+id/user_greeting"
                  android:layout_centerHorizontal="true"
                  android:gravity="center"
                  android:text="TODAY"
                  android:textColor="@color/white"
                  android:textSize="20dp"
                  android:clickable="true"
                  android:focusable="true"
                  android:datePickerMode="calendar" />
                <TextView
                  android:id="@+id/date"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:textSize="20dp"
                  android:layout_centerHorizontal="true"
                  android:gravity="center"
                  android:datePickerMode="calendar"/>

                <androidx.fragment.app.FragmentContainerView
                  android:id="@+id/intake_fragment_container"
                  android:name="androidx.navigation.fragment.NavHostFragment"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  app:defaultNavHost="true"
                  app:navGraph="@navigation/intake_nav" />
            </LinearLayout>

            <LinearLayout
              android:id="@+id/nutrient"
              android:layout_width="353dp"
              android:layout_height="300dp"
              android:layout_margin="30dp"
              android:background="@drawable/home_border"
              android:elevation="15dp"
              android:padding="10dp"
              android:orientation="horizontal">

                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="60dp"
                  android:gravity="center"
                  android:text="총 섭취 영양소"
                  android:textColor="@color/black"
                  android:textSize="24dp"
                  android:textStyle="bold"/>

                <!--
                <com.github.mikephil.charting.charts.HorizontalBarChart
                  android:id="@+id/nutrient_bar"
                  android:layout_width="0dp"
                  android:layout_height="0dp"
                  android:layout_marginHorizontal="112dp"
                  android:layout_marginTop="24dp"
                  app:layout_constraintDimensionRatio="1:1"
                  app:layout_constraintEnd_toEndOf="parent"
                  app:layout_constraintStart_toStartOf="parent" />
                  -->
            </LinearLayout>

            <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="20dp"
              android:layout_marginLeft="30dp">
                <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:gravity="start"
                  android:text="챌린지"
                  android:textSize="30dp"
                  android:textStyle="bold"
                  android:textColor="@color/black"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                  android:id="@+id/home_health_btn"
                  android:layout_width="100dp"
                  android:layout_height="150dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="20dp"
                  android:layout_marginBottom="20dp"
                  android:background="@drawable/home_border"
                  android:elevation="15dp"
                  android:clickable="true"
                  android:focusable="true"
                  android:gravity="center"
                  android:orientation="vertical"
                  app:layout_constrainedHeight="true">

                    <ImageButton
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:src="@drawable/ex" />

                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="4dp"
                      android:text="운동"
                      android:textColor="@android:color/darker_gray"
                      android:textSize="30dp" />
                </LinearLayout>

                <LinearLayout
                  android:id="@+id/home_drunk_btn"
                  android:layout_width="100dp"
                  android:layout_height="150dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginBottom="20dp"
                  android:background="@drawable/home_border"
                  android:elevation="15dp"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:clickable="true"
                  android:focusable="true">

                    <ImageButton
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                      android:src="@drawable/no_alcohol" />

                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="4dp"
                      android:text="금주"
                      android:textColor="@android:color/darker_gray"
                      android:textSize="30dp"/>
                </LinearLayout>

                <LinearLayout
                  android:id="@+id/home_smoke_btn"
                  android:layout_width="100dp"
                  android:layout_height="150dp"
                  android:layout_marginTop="10dp"
                  android:layout_marginLeft="15dp"
                  android:layout_marginRight="20dp"
                  android:layout_marginBottom="20dp"
                  android:background="@drawable/home_border"
                  android:elevation="15dp"
                  android:orientation="vertical"
                  android:gravity="center"
                  android:clickable="true"
                  android:focusable="true">

                    <ImageButton
                      android:layout_width="60dp"
                      android:layout_height="60dp"
                      android:src="@drawable/no_smoking"
                        android:background="@color/transparent"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"/>

                    <TextView
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginTop="4dp"
                      android:text="금연"
                      android:textColor="@android:color/darker_gray"
                      android:textSize="30dp"/>
                </LinearLayout>
            </LinearLayout>

            <Button
              android:id="@+id/kakaoLogoutButton"
              android:layout_width="350dp"
              android:layout_height="wrap_content"
                android:layout_gravity="center"
              tools:ignore="MissingConstraints"
              android:text="로그아웃"
              android:textColor="@color/black"
              android:layout_marginBottom="10dp"
              app:layout_constraintBottom_toBottomOf="parent" />

            <Button
              android:id="@+id/deleteAccountButton"
              android:layout_width="350dp"
              android:layout_height="wrap_content"
                android:layout_gravity="center"
              tools:ignore="MissingConstraints"
              android:text="탈퇴"
              android:textColor="@color/black"
              android:layout_marginBottom="50dp"
              app:layout_constraintBottom_toBottomOf="parent" />
        </LinearLayout>
    </ScrollView>
</layout>

